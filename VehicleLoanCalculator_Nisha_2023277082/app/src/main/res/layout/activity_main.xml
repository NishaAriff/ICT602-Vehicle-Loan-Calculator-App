<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="@color/sage_light">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/my_car_icon"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Loan Calculator"
            android:textSize="24sp"
            android:textColor="@color/sage_accent"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/card_background"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Loan Details"
                        android:textSize="18sp"
                        android:textColor="@color/sage_dark"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Price (RM)"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/editTextVehiclePrice"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="e.g., 80000"
                        android:inputType="numberDecimal"
                        android:background="@drawable/rounded_edittext"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Down Payment (RM)"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/editTextDownPayment"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="e.g., 10000"
                        android:inputType="numberDecimal"
                        android:background="@drawable/rounded_edittext"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loan Period (Years)"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/editTextLoanPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="e.g., 5"
                        android:inputType="number"
                        android:background="@drawable/rounded_edittext"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Interest Rate (%)"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="5dp"/>

                    <EditText
                        android:id="@+id/editTextInterestRate"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="e.g., 3.5"
                        android:inputType="numberDecimal"
                        android:background="@drawable/rounded_edittext"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:layout_marginBottom="25dp"/>

                    <Button
                        android:id="@+id/buttonCalculate"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:text="Calculate"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/sage_green"
                        android:fontFamily="sans-serif"
                        android:elevation="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Results Card (initially hidden) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/resultsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/sage_light"
                android:padding="25dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calculation Results"
                        android:textSize="20sp"
                        android:textColor="@color/sage_accent"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Loan Amount:"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:id="@+id/textViewLoanAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 0.00"
                            android:textSize="16sp"
                            android:textColor="@color/sage_dark"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Interest:"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:id="@+id/textViewTotalInterest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 0.00"
                            android:textSize="16sp"
                            android:textColor="@color/sage_dark"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="15dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Payment:"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:id="@+id/textViewTotalPayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 0.00"
                            android:textSize="16sp"
                            android:textColor="@color/sage_dark"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Monthly Payment:"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary"/>

                        <TextView
                            android:id="@+id/textViewMonthlyPayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RM 0.00"
                            android:textSize="16sp"
                            android:textColor="@color/sage_dark"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/buttonReset"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Reset"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/sage_dark"
                        android:elevation="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp">

        <Button
            android:id="@+id/buttonHome"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="Home"
            android:textSize="16sp"
            android:textColor="@color/sage_dark"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_home"
            android:drawableTint="@color/sage_dark"
            android:drawablePadding="5dp"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/buttonAbout"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="About"
            android:textSize="16sp"
            android:textColor="@color/sage_dark"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_info"
            android:drawableTint="@color/sage_dark"
            android:drawablePadding="5dp"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>